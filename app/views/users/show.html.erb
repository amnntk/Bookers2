<%# サインアップ　%>

<%= flash[:notice] %>

<% if flash[:success] %>
  <div class="flash">
    <%= flash[:success] %>
  </div>
<% end %>
<%= render '/users/show', user: @user,book: @book %>
<!-- 共通部分 -->

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
         <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
            <% image_tag book.user.get_profile_image(100,100), class: 'profile' %>
            <% end %>

            <%#= image_tag @user.get_profile_image(100,100) %></td>


          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
          <% end %>

        </tr>
       </table>

      </div>
  </div>
</div>
